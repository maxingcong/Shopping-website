<script type="text/javascript">
    require(["base", "tools"], function ($, T) {
        var storage = T.Storage({
            key: "test"
        });
        $("#test1").click(function(e){
            storage.add(new Date().getDate());
            storage.add(new Date().getTime());
        });
        $("#test2").click(function(e){
            alert(storage.get());
        });
        $("#test3").click(function(e){
            alert(storage.has(new Date().getDate()));
        });
        $("#test4").click(function(e){
            storage.remove(new Date().getDate());
            alert(storage.get());
        });
    });
</script>
